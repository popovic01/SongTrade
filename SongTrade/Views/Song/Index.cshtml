@model IEnumerable<Song>

<div class="row pb-3">
    @foreach (var song in Model)
    {
        <div class="card m-2" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@song.Title</h5>
                <p class="card-text">
                    Author: <a asp-controller="Author" asp-action="Index" asp-route-authorId="@song.UserId"
                           class="card-link mb-2">@song.User.Username</a>
                </p>
                @if (song.Lyrics.Length < 200)
                {
                    <p class="card-text">@song.Lyrics.Substring(0, song.Lyrics.Length)...</p>
                }
                else 
                {
                    <p class="card-text">@song.Lyrics.Substring(0, 200)...</p>
                }
                <p>Price: @song.Price $</p>
                <a href="#" class="btn btn-primary btn-sm">See Details</a>
            </div>
        </div>
    }
</div>


