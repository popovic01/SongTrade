@model Song

<h1>Details</h1>

<div class="card m-4" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">
            Author: <a asp-controller="Author" asp-action="Index" asp-route-authorId="@Model.UserId"
                       class="card-link mb-2">@Model.User.Username</a>
        </p>
        <p class="card-text">@Model.Lyrics</p>
        <p>Price: @Model.Price $</p>
    </div>
</div>
